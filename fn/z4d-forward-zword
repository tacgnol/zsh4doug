#!/usr/bin/env zsh

eval "$_z4d_opt"
local word buf
repeat ${NUMERIC:-1}; do
  buf=$PREBUFFER$BUFFER
  for word in ${(Z:n:)buf} ''; do
    (( $#buf < $#RBUFFER )) && break
    buf=${${buf##[[:space:]]#}:$#word}
  done
  CURSOR=$(($#BUFFER - $#buf))
  if [[ $KEYMAP == vicmd ]] && (( CURSOR && CURSOR == $#BUFFER )); then
    (( --CURSOR ))
  fi
done
return 0
